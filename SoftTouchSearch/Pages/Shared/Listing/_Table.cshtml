@using SoftTouchSearch.Models.Listings

@model StoryListing

<div class="table-responsive">
    <table class="table table-sm table-borderless">
        <thead>
            <tr>
                <th scope="col">Episode</th>
                <th scope="col">Title</th>
                <th scope="col" colspan="2">Links</th>
            </tr>
        </thead>
        @foreach (ChapterListing chapter in Model)
        {
            @* Each chapter forms its own rowgroup *@
            <tbody>
                @{
                    foreach (EpisodeListing episode in chapter)
                    {
                        if (episode.IsFirstInChapter)
                        {
                            await Html.RenderPartialAsync("Listing/_Table_RowChapter", episode);
                        }
                        else
                        {
                            await Html.RenderPartialAsync("Listing/_Table_Row", episode);
                        }
                    }
                }
            </tbody>
        }
    </table>
</div>